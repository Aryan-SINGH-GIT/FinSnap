<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SummaryFragment"
    android:background="#F8F4A6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">
            
            <!-- Total Amount Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Balance"
                    android:layout_gravity="center"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                    
                <TextView
                    android:id="@+id/totalAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="₹0.00"
                    android:textSize="36sp"
                    android:layout_gravity="center"
                    android:textColor="#222222"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <!-- Two column layout for Online and Cash -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                
                <!-- Online Amount Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Balance"
                        android:layout_gravity="center"
                        android:textColor="#666666"
                        android:textSize="16sp" />
                        
                    <TextView
                        android:id="@+id/onlineAmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="₹0.00"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <!-- Cash Amount Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Balance"
                        android:layout_gravity="center"
                        android:textColor="#666666"
                        android:textSize="16sp" />
                        
                    <TextView
                        android:id="@+id/cashAmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="₹0.00"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:textColor="#FF9800"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Savings Target Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings Target"
                    android:layout_gravity="center"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                    
                <TextView
                    android:id="@+id/savingsTargetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="₹0.00"
                    android:textSize="28sp"
                    android:layout_gravity="center"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>