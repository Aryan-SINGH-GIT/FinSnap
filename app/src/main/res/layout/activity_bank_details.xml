<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E222A"
    android:padding="20dp">



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Spending, Bright Future"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_margin="30dp"

        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>



    <Spinner
        android:id="@+id/bankSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:background="@android:drawable/editbox_background"
        android:popupBackground="#1E222A"

        />


    <EditText
        android:id="@+id/currentAmount"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Bank Amount"
        android:inputType="numberDecimal"
        android:layout_below="@id/bankSpinner"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#AAAAAA"
        android:textColor="#EEEEEE"/>


    <EditText
        android:id="@+id/cashAmount"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Cash Amount"
        android:inputType="numberDecimal"
        android:layout_below="@id/currentAmount"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#AAAAAA"
        android:textColor="#EEEEEE"/>

    <EditText
        android:id="@+id/savingtarget"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monthly Saving Amount"
        android:inputType="numberDecimal"
        android:layout_below="@id/cashAmount"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#AAAAAA"
        android:textColor="#EEEEEE"/>




    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetStarted"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"

        android:paddingTop="10dp"
        android:text="Track your expenses, save wisely, and invest for a better tomorrow."
        android:textAlignment="center"
        android:textColor="#00ADB5"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:backgroundTint="#00ADB5"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
